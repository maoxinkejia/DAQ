<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 second" debug="false">
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <property name="LOG_DIR" value="/app/htbd/dts-dispatcher/log"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [ %-6level] [%thread] %logger{90}: %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}/DAQ-%i.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>200 MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}] [ %-5level] - [ %thread ] %logger{35}: %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- 开发、测试环境 -->
    <springProfile name="dev">
        <logger name="com.zaxxer.hikari.pool" level="DEBUG"/>
        <logger name="org.quartz" level="ERROR"/>
        <logger name="org.apache.ibatis" level="DEBUG"/>
        <logger name="org.apache.tomcat" level="INFO"/>
        <logger name="org.mybatis.spring" level="ERROR"/>
        <logger name="com.ksyun.kbdp.dts" level="DEBUG"/>
        <logger name="org.apache.kafka" level="INFO"/>
        <logger name="com.htsc.octopus" level="INFO"/>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="sit,sit0,sit1,uat,prd">
        <logger name="com.zaxxer.hikari" level="ERROR"/>
        <logger name="org.quartz" level="ERROR"/>
        <logger name="org.apache" level="ERROR"/>
        <logger name="org.mybatis.spring" level="ERROR"/>
        <logger name="org.hibernate" level="ERROR"/>
        <logger name="com.ksyun.kbdp.dts" level="INFO"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.apache.kafka" level="ERROR"/>
        <logger name="com.htsc.octopus" level="ERROR"/>
    </springProfile>

</configuration>